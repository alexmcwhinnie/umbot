extends base

block body

    div.jumbotron
      h2 Hello!

      if user
        p Welcome, #{user.givenName}
        
        form(action='/logout', method='POST')
          button.btn.btn-default(type="submit") Logout
        p
          a.btn.btn-primary.checkout(href="#") Give me an umbrella         


        h2= _incount
        h2= _outcount

      else
        p Welcome to Umbot, sign up to stay dry.
        p
          a.btn.btn-primary(href="/login") Login now
        p
          span.small Don't have an account?
          span &nbsp;
          a.small(href="/register") Register now